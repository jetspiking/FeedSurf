<UserControl x:Class="FeedSurf.Interface.FeedSelectionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FeedSurf.Interface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">
    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Margin="0,5,0,5">
        <!--<RadioButton x:Name="FeedSelectionButton" VerticalAlignment="Center" />-->
        <Image x:Name="FeedImage" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.EdgeMode="Aliased" Stretch="Uniform" Width="48" Height="48"/>
        <Label x:Name="FeedLabel" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
