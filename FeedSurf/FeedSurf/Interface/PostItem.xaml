<UserControl x:Class="FeedSurf.Interface.PostItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FeedSurf.Interface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="15,15,15,15" Background="Transparent">
    <DockPanel Height="120">
        <Label x:Name="DateLabel" DockPanel.Dock="Top" />
        <DockPanel>
            <Image x:Name="FeedImage" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.EdgeMode="Aliased" Stretch="Uniform" Width="64" Height="64" DockPanel.Dock="Left" Margin="5,5,5,5"/>
            <StackPanel Orientation="Vertical">
                <Label x:Name="TitleLabel" VerticalAlignment="Center" />
                <TextBlock x:Name="DescriptionLabel" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
            </StackPanel>
        </DockPanel>
    </DockPanel>
</UserControl>
